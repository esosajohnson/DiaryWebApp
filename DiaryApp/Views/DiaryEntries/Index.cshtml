@model List<DiaryEntry>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Diary Entries</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary"  asp-action="Create">
				Create New Diary Entry
			</a>
		</div>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Created At</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var entry in Model)
			{
				<tr>
					<td>@entry.Title</td>
					<td>@entry.Description</td>
					<td>@entry.CreatedAt.ToString("g")</td>
					<td>
						<a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">
							Edit
						</a>
						<a asp-controller="DiaryEntries" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">
							Delete
						</a>
					</td>
					
				</tr>
			}
		</tbody>
	</table>
</div>