@model List<DiaryEntry>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Created At</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var entry in Model)
			{
				<tr>
					<td>@entry.Title</td>
					<td>@entry.Description</td>
					<td>@entry.CreatedAt.ToString("g")</td>
					<td>Edit and Delete</td>
					
				</tr>
			}
		</tbody>
	</table>
</div>